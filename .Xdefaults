# --- CLIPBOARD ---

URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.iso14755: False
URxvt.perl-ext-common: default,clipboard

# --- MISC OPTIONS ---

URxvt*scrollBar: false
URxvt*perl-lib: /usr/lib/urxvt/perl/
URxvt.saveLines:32767 

# --- URL MATCHING ---

URxvt*perl-ext-common: default,matcher
URxvt*urlLauncher: /usr/bin/chromium-browser
URxvt*matcher.button: 1
URxvt*matcher.pattern.1: \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]

# --- FONTS ---

URxvt*font: xft:Terminus:pixelsize=20:antialias=true
URxvt*boldFont: xft:Terminus:pixelsize=20:antialias=true

URxvt*iconFile: /usr/share/icons/Moka/96x96/apps/bash.png

# Used for weird fonts
#URxvt*.letterSpace: -3

